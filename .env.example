# TicketDrop 2.0 Environment Variables
# Copy this to .env and fill in your values

# Google Sheets Authentication
# Option 1: Service Account (recommended for automation)
GOOGLE_APPLICATION_CREDENTIALS=service_account.json

# Option 2: OAuth (for user-based access)
# Leave blank if using service account
# token.json will be generated on first run

# Google Spreadsheet
SPREADSHEET_NAME=Rick's TicketDrop 2.0
SPREADSHEET_ID=your_spreadsheet_id_here

# User email (for sharing sheets)
USER_EMAIL=lily@example.com

# Timezone (for Alberta)
TIMEZONE=America/Edmonton

# AXON Export Path (Windows)
AXON_EXPORT_PATH=C:\AxonETAAttach\

# Photo Storage (optional - Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_BUCKET=ticket-photos

# API Settings (for mobile app sync)
API_URL=https://script.google.com/macros/s/your_deployment_id/exec
